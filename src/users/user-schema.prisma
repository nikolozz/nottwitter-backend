model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  role      Role?
  avatar    File?    @relation(fields: [avatarId], references: [id])
  avatarId  Int?
  tweets    Tweet[]
  bio       String?
  location  String?
  website   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum Role {
  ADMIN
  USER
}
